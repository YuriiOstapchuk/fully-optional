{
  "name": "fully-optional",
  "version": "1.1.3",
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "sideEffects": false,
  "repository": "git@github.com:YuriiOstapchuk/fully-optional.git",
  "author": "Yurii Ostapchuk <y.ostapchuk1@gmail.com>",
  "license": "MIT",
  "keywords": [
    "maybe",
    "option",
    "null",
    "null-safe",
    "utils",
    "fp",
    "functional",
    "typescript"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "compile:es": "tsc -p .",
    "compile:commonjs": "tsc -p . --module commonjs --outDir ./dist/commonjs",
    "compile": "npm run compile:es && npm run compile:commonjs",
    "prebuild": "npm run clean",
    "build": "npm run compile",
    "check-compilation": "npm run compile:es -- --noEmit",
    "precommit": "npm run check-compilation && lint-staged",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "remeda": "^0.0.11",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
